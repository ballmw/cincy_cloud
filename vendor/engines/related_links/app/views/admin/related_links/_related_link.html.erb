<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(related_link) -%>">
  <span class='title'>
    <%= related_link.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), related_link_path(related_link),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_related_link_path(related_link),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_related_link_path(related_link),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => related_link.name),
        :method => :delete %>
  </span>
</li>
