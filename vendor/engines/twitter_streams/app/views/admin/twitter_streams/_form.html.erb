<%= form_for [:admin, @twitter_stream] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @twitter_stream,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :username -%>
    <%= f.text_field :username, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :num_to_display -%>
    <%= f.text_field :num_to_display  -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.twitter_streams.twitter_stream'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @twitter_stream.username)
              } %>
<% end -%>
