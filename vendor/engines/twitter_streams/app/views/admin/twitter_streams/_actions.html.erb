<ul>
  <% if Admin::TwitterStreamsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_twitter_streams_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_twitter_stream_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::TwitterStreamsController.sortable? and TwitterStream.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Twitter Streams"),
                 admin_twitter_streams_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Twitter Streams"),
                 admin_twitter_streams_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>