<%= form_for [:admin, @buzz] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @buzz,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :search -%>
    <%= f.text_field :search, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :number_to_display -%>
    <%= f.text_field :number_to_display  -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.buzzs.buzz'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @buzz.search)
              } %>
<% end -%>
