<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(buzz) -%>">
  <span class='title'>
    <%= buzz.search %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), buzz_path(buzz),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_buzz_path(buzz),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_buzz_path(buzz),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => buzz.search),
        :method => :delete %>
  </span>
</li>
