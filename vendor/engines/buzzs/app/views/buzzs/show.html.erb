<% content_for :body_content_title do %>
  <%= @buzz.search %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Search</h1>
    <p>
      <%=raw @buzz.search %>
    </p>
  </section>
  <section>
    <h1>Number To Display</h1>
    <p>
      <%=raw @buzz.number_to_display %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="buzzs">
      <% @buzzs.each do |buzz| %>
        <li>
          <%= link_to buzz.search, buzz_path(buzz) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
